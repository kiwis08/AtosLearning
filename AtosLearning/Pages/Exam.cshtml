@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AtosLearning.Pages.ExamModel
@{
    ViewData["Title"] = "Crear examen";
}

<head>
    <link href="css/exam.css" rel="stylesheet" />
    <title>Examen</title>

</head>

<header class="min-vw-100 display-flex flex-row justify-content-between align-items-center px-5">
    <div class="my-flex-row">
        <div class="my-flex-column me-1">
            <h2 class="m-0 blue d-inline-block fs-1" onclick="location.href='/Homepage'" style="cursor:pointer;">AtosLearning</h2>
            <h4 class="yellow d-inline-block fs-">Crear examen</h4>
        </div>
        <div class="my-flex-column justify-content-center mb-1">
            <h5 class="blue">Profesores</h5>
        </div>

    </div>

    <div class="my-flex-row">
        <div class="my-flex-column align-items-center me-2">
            <h4>@Model.CurrentUser.Name @Model.CurrentUser.Surname</h4>
            <h5 data-bs-toggle="modal" data-bs-target="#ModalPerfil" style="cursor:pointer;">Ver mi perfil</h5>
            <div class="modal fade" id="ModalPerfil" tabindex="-1" aria-labelledby="ModaPerfilLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header display-flex justify-content-center">
                            <h5 class="modal-title text-center d-block" id="ModalPerfilLabel">¡ Hola  @Model.CurrentUser.Name !</h5>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <p>
                                    Los datos de tu perfil son los siguientes:
                                    Tu nombre es @Model.CurrentUser.Name @Model.CurrentUser.Surname,
                                    tu correo es @Model.CurrentUser.Email
                                    y estas inscrito a un curso de manera exitosa.
                                    @if (@Model.CurrentUser.IsTeacher)
                                    {
                                    <p> Tu perfil es de tipo maestro </p>
                                    }
                                    else
                                    {
                                    <p> Tu perfil es de tipo alumno </p>
                                    }
                                </p>

                            </div>
                            <div class="display-flex justify-content-end">
                                <button type="button" onclick="location.href='Index'" class="btn btn-danger">Cerrar sesión</button>
                                <button type="button" class="btn btn-success" data-bs-dismiss="modal">Regresar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="my-flex-column align-items-center justify-content-center">
            <img id="user-img" src="images/profile.png" alt="profile" />
        </div>
    </div>
</header>

<form method="post">
    <div class="container">
        <div class="row align-items-center">
            <div class="col text-center">
                <button type="button" class="btn rounded-button" style="width: 300px; height: 200px; border-color: #3B3468">Poner foto de portada</button>
            </div>
            <div class="col">
                <input asp-for="@Model.CurrentExam.Title" class="form-control exam-field" id="exam-title" placeholder="Nombre del examen">
                <input asp-for="@Model.CurrentExam.Description" class="form-control exam-field" id="exam-description" placeholder="Descripción">
            </div>
            <div class="col">
                <label for="start">Fecha límite:</label><br/>
                <input asp-for="@Model.CurrentExam.DueDate">
                <input type="hidden" name="ExamTitle" id="hidden-exam-title" value="@Model.CurrentExam.Title"/>
                <input type="hidden" name="ExamDescription" id="hidden-exam-description" value="@Model.CurrentExam.Description"/>
                <select asp-for="@Model.SelectedSubjectId" class="dropdown-toggle btn-lg">
                    <option value="">Selecciona una materia</option>
                    <ul class="dropdown-menu">
                        @for (int i = 0; i < @Model.Subjects.Count(); i++)
                        {
                            <option class="dropdown-item" value="@Model.Subjects.ElementAt(i).ID">@Model.Subjects.ElementAt(i).Name</option>
                        }
                    </ul>
                </select>
            </div>
        </div>
        <div class="row align-items-center text-center">
            <div class="col-4">
                <div class="card bg-light mx-auto" style="height: 300px; width: 200px; overflow-y:  auto; margin-left: 20px">
                    <div class="card-body">
                        @for (int i = 1; i <= @Model.QuestionsCount; i++)
                        {
                            <ul class="btn list-group list-group-flush" id="questions-list">
                                <li class="list-group-item border-bottom" style="background-color: transparent">Pregunta @i</li>
                            </ul>
                        }
                    </div>
                </div>
                <button id="incrementButton" class="btn rounded-button">Añadir Pregunta</button>
            </div>
            <div class="col">
                <div class="col">
                    <input asp-for="@Model.CurrentExam.Questions[@Model.CurrentQuestionIndex].Title" type="text" class="custom-text-field" placeholder="Escribe la pregunta">
                </div>
                <div class="container my-4">
                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-lg-6 mb-3 d-flex justify-content-center">
                            <input asp-for="@Model.CurrentExam.Questions[@Model.CurrentQuestionIndex].Answers[0].Title" class="btn rounded-button" style="border-bottom-width: 2px; width: 100%; height: 100px; border-radius: 24px; border-color: blue" placeholder="Opción A">
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-6 mb-3 d-flex justify-content-center">
                            <input asp-for="@Model.CurrentExam.Questions[@Model.CurrentQuestionIndex].Answers[1].Title" class="btn rounded-button" style="border-bottom-width: 2px; width: 100%; height: 100px; border-radius: 24px; border-color: green" placeholder="Opción B">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-lg-6 mb-3 d-flex justify-content-center">
                            <input asp-for="@Model.CurrentExam.Questions[@Model.CurrentQuestionIndex].Answers[2].Title" class="btn rounded-button" style="border-bottom-width: 2px; width: 100%; height: 100px; border-radius: 24px; border-color: orange" placeholder="Opción C">
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-6 mb-3 d-flex justify-content-center">
                            <input asp-for="@Model.CurrentExam.Questions[@Model.CurrentQuestionIndex].Answers[3].Title" class="btn rounded-button" style="border-bottom-width: 2px; width: 100%; height: 100px; border-radius: 24px; border-color: red" placeholder="Opción D">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <select asp-for="@Model.CurrentExam.Questions[@Model.CurrentQuestionIndex].CorrectAnswerIndex" class="dropdown-toggle btn-lg">
                            <option value="">Respuesta correcta</option>
                            <ul class="dropdown-menu">
                                @for (int i = 0; i < 4; i++)
                                {
                                    int option = i + 1;
                                    <option class="dropdown-item" value="@i">@option</option>
                                }
                            </ul>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row align-items-center text-center">
        <div class="col">
            <button onclick="submitExam()" class="btn rounded-button" type="submit" style="border-bottom-width: 2px; width: 30%; height: 50px; border-radius: 24px; border-color: green">Guardar Examen</button>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        document.getElementById("incrementButton").addEventListener("click", function () {
            fetch('/Exam/IncrementCounter')
        });
    </script>
}