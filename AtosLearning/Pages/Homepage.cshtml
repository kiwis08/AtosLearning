<div class="row justify-content-between">
    <div class="col-4 text-start align-items-start">

        <h4>Examenes pendientes</h4>
    </div>
        <div class="col-3 text-center align-content-end">
            <button class="btn btn-secondary btn-lg dropdown-toggle" id="subject-dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                @if (Model.SelectedSubject != null)
                {
                    @Model.SelectedSubject.Name
                }
                else
                {
                    <span>Filtrar</span>
                }
            </button>
            <ul class="dropdown-menu">
                @foreach (var subject in Model.Subjects)
                {
                    <li>
                        <button class="dropdown-item" onclick="onSelectDropdown()" name="subjectId" value="@subject.ID">@subject.Name</button>
                    </li>
                }
            </ul>
        </div>
</div>
    <section id="tranding">
        <div class="container">
            <div class="swiper tranding-slider overflow-visible">
                <div class="swiper-wrapper">
                    <!-- Slide-start -->
                    @foreach (var Exam in Model.ActiveExams)
                    {
                        <div class="swiper-slide tranding-slide">
                            <div class="tranding-slide-img">
                                <img src="@Exam.ImageUrl" alt="Tranding">
                            </div>
                            <div class="tranding-slide-content">
                                <div class="tranding-slide-content-bottom" style="align-content:center;">

                                    <a asp-page="/resultadoAlumno" asp-route-examid=@Exam.Id><h2 class="food-name">@Exam.Title</h2></a>
                                    <h4 class="food-rating">
                                        <p> @Exam.DueDate </p>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="tranding-slider-control mt-4">
                    <div class="swiper-button-prev slider-arrow">
                        <ion-icon name="arrow-back-outline"></ion-icon>
                    </div>
                    <div class="swiper-button-next slider-arrow">
                        <ion-icon name="arrow-forward-outline"></ion-icon>
                    </div>
                    <div class="swiper-pagination"></div>
                </div>

            </div>
        </div>
    </section>
    <h4>Examenes anteriores</h4>
    <section id="tranding">
        <div class="container">
            <div class="swiper tranding-slider overflow-visible">
                <div class="swiper-wrapper">
                    <!-- Slide-start -->
                    @foreach (var Exam in Model.ClosedExams)
                    {
                        <div class="swiper-slide tranding-slide">
                            <div class="tranding-slide-img">
                                <img src="@Exam.ImageUrl" alt="Tranding">
                            </div>
                            <div class="tranding-slide-content">
                                <div class="tranding-slide-content-bottom">

                                    <a href="/resultado"><h2 class="food-name">@Exam.Title</h2></a>

                                    <h4 class="food-rating">
                                        <p> @Exam.DueDate </p>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    }
                    <!-- Slide-end -->
                </div>

                <div class="tranding-slider-control mt-4">
                    <div class="swiper-button-prev slider-arrow">
                        <ion-icon name="arrow-back-outline"></ion-icon>
                    </div>
                    <div class="swiper-button-next slider-arrow">
                        <ion-icon name="arrow-forward-outline"></ion-icon>
                    </div>
                    <div class="swiper-pagination"></div>
                </div>

            </div>
        </div>
    </section>

</div>
   
