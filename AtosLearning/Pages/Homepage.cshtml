<header class="min-vw-100 display-flex flex-row justify-content-between align-items-center px-5">
    <div class="my-flex-row">
        <img id="goback" src="/images/greenarrowback.png" alt="goback" onclick="location.href='/Index'" style="height: 50px !important; width: 50px !important;margin-right:20px; margin-top:20px;" />
        <div class="my-flex-column me-1">
            <h2 class="m-0 blue d-inline-block fs-1">AtosLearning</h2>
            <h4 class="yellow d-inline-block fs-">Home page</h4>
        </div>
        <div class="my-flex-column justify-content-center mb-1">
            <h5 class="blue">Profesores</h5>
        </div>
    </div>
    <div class="my-flex-row">
        <div class="my-flex-column align-items-center me-2">
            <h4>Código único</h4>
            <h5>@Model.CurrentTeacher.Course.Code</h5>
        </div>
    </div>
    <div class="my-flex-row">
        <div class="my-flex-column align-items-center me-2">
            <h4>@Model.CurrentTeacher.Name @Model.CurrentTeacher.Surname</h4>
            <h5>Ver mi perfil</h5>
        </div>
        <div class="my-flex-column align-items-center justify-content-center">
            <img id="user-img" src="images/profile.png" alt="profile"/>
        </div>
    </div>
</header>


<div class="principal">
    <div class="row ">
        <div class="col-3 text-center align-content-start">
                <button class="button-rectangle" onclick="location.href='/Exam'">Crear examen</button>
        </div>
        <div class="col-5 align-items-start">
                 <div class="columnabuscar">
                       <div class="row">
                            <h4>Buscar examen</h4><br />
                       </div>
                        <div class="row">
                            <input type="text" class="search-bar" placeholder="Buscar examen">
                        </div>
                        <div class="row">
                            <button class="buscar" onclick="performSearch()">Buscar</button>
                        </div>
                </div>
        </div>
        <div class="col-4" style="display: grid;padding: 20px 50px 20px 20px;align-content: center;justify-items: center;">
            <div class="row align-items-center" style="display:flex;">
                <h4>Materias</h4>
            </div>

            <div class="col align-items-start" style="display:flex; flex-wrap:wrap; justify-content:space-around;">
                    @foreach (var subject in Model.Subjects)
                    {
                    <button class="nombremateria" onclick="location.href='/resultado'">@subject.Name</button>
                    }
            </div>
            <div class="row align-items-center" style="display:flex; justify-content:center;">
                <button class="crearmateria" onclick="location.href='/resultado'">Crear materia</button>
            </div>
        </div>
        </div>
   
<div class="row justify-content-between">
    <div class="col-4 text-start align-items-start">

        <h4>Examenes pendientes</h4>
    </div>
        <div class="col-3 text-center align-content-end">
            <button class="btn btn-secondary btn-lg dropdown-toggle" id="subject-dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                @if (Model.SelectedSubject != null)
                {
                    @Model.SelectedSubject.Name
                }
                else
                {
                    <span>Filtrar</span>
                }
            </button>
            <ul class="dropdown-menu">
                @foreach (var subject in Model.Subjects)
