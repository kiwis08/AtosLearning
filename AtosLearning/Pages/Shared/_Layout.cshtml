<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AtosLearning</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/AtosLearning.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <div id="header-left">
        <div id="header-left-top">
            <h2 id="text-logo" class="blue">AtosLearning</h2>
            <h3 class="blue">Profesores</h3>
        </div>
        <div class="header-left-bottom">
            <h3 id="page-title" class="yellow">Crear examen</h3>
        </div>
    </div>
    <div id="header-right">
                <div id="right-side-name">
                    <h3>Thomas Rubio</h3>
                    <h4>Ver mi perfil</h4>
                </div>
    <div id="right-side-img">
        <img id="user-img" src="images/profile-icon.png" alt="profile">
    </div>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - AtosLearning - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>